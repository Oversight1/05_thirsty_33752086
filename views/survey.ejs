<html>
<head>
    <title>Customer Survey</title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
</head>
<body>
    <h1>Customer Survey</h1>
    <form action="/survey_result" method="POST">
        <h3>Your Details</h3>
        First Name: <input type="text" name="firstname" required><br>
        Surname: <input type="text" name="surname" required><br>
        Email: <input type="email" name="email" required><br>

        <h3>Questions</h3>
        <p>How old are you? <input type="number" name="age"></p>

        <p>Which category do you consume most?</p>
        <% productCategories.forEach(function(cat) { %>
            <input type="radio" name="favorite_drink" value="<%= cat %>"> <%= cat %><br>
        <% }); %>

        <p>Are you a student? <input type="checkbox" name="is_student" value="yes"></p>

        <input type="submit" value="Submit Survey">
    </form>
</body>
</html>